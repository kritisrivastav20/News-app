<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/oneUnit">

        <TextView
            android:id="@+id/numberId"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textColor="#C25B56"
            android:textSize="30sp"
            android:text="1"
            android:background="#FEF6EB"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/newsHeading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#525564"
                android:textSize="20sp"
                android:text="News heading"
                android:background="#FFFFFF"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"/>
            <TextView
                android:id="@+id/newsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="date"
                android:textColor="#BEB9B5"
                android:gravity="left"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"/>
        </LinearLayout>

</LinearLayout>